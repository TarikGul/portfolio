daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
	use epoll;
	accept_mutex on;
	worker_connections 1024;
}

http {
	gzip on;
	gzip_comp_level 2;
	gzip_min_length 512;

	server_tokens off;

	log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
	access_log logs/nginx/access.log l2met;
	error_log logs/nginx/error.log;

	include mime.types;
	default_type application/octet-stream;
	sendfile on;

	

	resolver 8.8.8.8;

	#Must read the body in 5 seconds.
	client_body_timeout 5;

	upstream upstream_app_a {
		server tarik-gul-portfolio.herokuapp.com:443
 	}

	 upstream upstream_app_b {
		server tarik-gul-portfolio.herokuapp.com:443
 	}

	server {
		listen 127.0.0.1:443;
		server_name _;
		keepalive_timeout 5;

		location / {
			set $upstream upstream_app_b;
			proxy_pass https://127.0.0.1:<%= ENV["PORT"] %>;
            proxy_ssl_name tarik-gul-portfolio.herokuapp.com;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
		}

		location /message {
			set $upstream upstream_app_b;
			proxy_pass https://127.0.0.1:1337;
            proxy_ssl_name tarik-gul-portfolio.herokuapp.com;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header Host $http_host;
			proxy_redirect off;
		}
	}

